<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dgback"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tes Gejala Covid-19 Mandiri"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/diagcov" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kenali gejala covid-19 untuk diagnosis sedari dini"
            android:textAlignment="center"
            android:textColor="#333131"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cxDemam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickChecked"
            android:text="Demam" />

        <CheckBox
            android:id="@+id/cxBatuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickChecked"
            android:text="Batuk" />

        <CheckBox
            android:id="@+id/cxLelah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickChecked"
            android:text="Kelelahan" />

        <CheckBox
            android:id="@+id/cxHilangbau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickChecked"
            android:text="Kehilangan rasa atau bau" />

        <CheckBox
            android:id="@+id/cxsktteng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickChecked"
            android:text="Sakit tenggorokan" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxsktpala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sakit kepala" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxsktnyeri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sakit dan nyeri" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxDiare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diare" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxruam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruam pada kulit atau perubahan warna pada jari tangan atau kaki" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxiritasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata merah atau iritasi" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxsesaknapas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kesulitan bernapas atau sesak napas" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxbingung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kesulitan berbicara atau bergerak, atau bingung" />

        <CheckBox
            android:onClick="onClickChecked"
            android:id="@+id/cxnyeridada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nyeri Dada" />


        <Button
            android:id="@+id/btn_diagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cek Diagnosa" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>